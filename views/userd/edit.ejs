<section>
  <div class="content">
    <div class="container">
      <h2>Update File</h2>

      <form action="/userd/edit/<%= send.id %>" method="POST" class="send-form">
        <div class="form-group">
          <label for="name">File Name</label>
          <input type="text" id="name" name="name" value="<%= send.file_id %>" required>
        </div>

        <div class="form-group">
          <label for="sender_id">Sender</label>
          <input type="text" id="sender_id" name="sender_id" value="<%= send.sender_id %>" required>
        </div>

        <div class="form-group">
          <label for="recipient_id">Recipient</label>
          <input type="text" id="recipient_id" name="recipient_id" value="<%= send.recipient_id %>" required>
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          <input type="text" id="date" name="date" value="<%= send.date %>" required>
        </div>

        <div class="form-group">
          <label for="status">Status</label>
          <input type="text" id="status" name="status" value="<%= send.status %>" required>
        </div>

        <div class="form-group">
          <label for="note">Comment</label>
          <input type="text" id="note" name="note" value="<%= send.note %>" required>
        </div>

        <div class="button-group">
    <button type="submit" class="button-link">Update File</button>
    <a href="/userd" class="button-link">Cancel</a>
      </form>
    </div>
  </div>
</section>